{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/frontend/src/*"]
    }
  },
  "include": ["apps/frontend/src/**/*.ts", "apps/frontend/src/**/*.tsx"],
  "exclude": ["node_modules"]
} 